@model IEnumerable<User>

@{
    ViewData["Title"] = "liste of Users";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.UserFullName)</th>
                    <th>@Html.DisplayNameFor(model => model.UserEmail)</th>
                    <th>@Html.DisplayNameFor(model => model.Userphonenumber)</th>
                    <th>@Html.DisplayNameFor(model => model.UserCity)</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.UserName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.UserFullName)

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.UserEmail)

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.Userphonenumber)

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.UserCity)

                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>|
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>|
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>


                        </td>

                    </tr>
                }
            </tbody>
            
        </table>

    </div>
</div>


