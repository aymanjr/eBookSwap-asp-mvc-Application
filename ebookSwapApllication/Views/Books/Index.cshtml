@model IEnumerable<Book>

@{
    ViewData["Title"] = "liste of Books";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BookImagePath)</th>
                    <th>@Html.DisplayNameFor(model => model.BookTitle)</th>
                    <th>@Html.DisplayNameFor(model => model.BookCategory)</th>
                    <th>@Html.DisplayNameFor(model => model.BookCondition)</th>
                    <th>@Html.DisplayNameFor(model => model.BookLanguage)</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.BookImagePath" style="max-width: 150px" />

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.BookTitle)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.BookCategory)

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.BookCondition)

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => item.BookLanguage)

                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>|
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>|
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>


                        </td>

                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>


